#include "uart_communication_fsm.h"

void uart_communication_fsm(){
	switch (uart_state) {
		case UART_IDLING:
				break;
		case UART_PROCESS:

			break;
		case UART_SEND:
			uart_state = UART_WAIT;
			break;
		case UART_WAIT:
			if(timer_flag[1] == 1){
				uart_state = UART_SEND;
				setTimer(300, 1);
			}
			break;
		default:
			uart_state = UART_IDLING;
			parser_state = PARSER_INIT;
			setTimer(300, 1);
			break;
	}
}
